# http://stackoverflow.com/questions/9265984/strange-gvim-inner-borders
# make extra space less noticeable (not white anymore)
style "vimfix" {
  bg[NORMAL] = "#282828" # this matches my gvim theme 'Normal' bg color.
}
widget "vim-main-window.*GtkForm" style "vimfix"

# Default crap {{{
# DO NOT EDIT! This file will be overwritten by LXAppearance.
# Any customization should be done in ~/.gtkrc-2.0.mine instead.

gtk-theme-name="Industrial"
gtk-icon-theme-name="gnome"
gtk-font-name="Cantarell 11"
gtk-cursor-theme-size=0
gtk-toolbar-style=GTK_TOOLBAR_BOTH
gtk-toolbar-icon-size=GTK_ICON_SIZE_LARGE_TOOLBAR
gtk-button-images=1
gtk-menu-images=1
gtk-enable-event-sounds=1
gtk-enable-input-feedback-sounds=1
gtk-xft-antialias=1
gtk-xft-hinting=1
gtk-xft-hintstyle="hintfull"
gtk-xft-rgba="rgb"
include "/home/angelic_sedition/.gtkrc-2.0.mine"
